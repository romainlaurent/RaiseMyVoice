@model IEnumerable<RaiseMyVoice.Library.Models.Question>

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout2";
}

<h2>Edit</h2>

<p>
    <a asp-action="Create" asp-controller="Question" >Create New Question</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Sujet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sujet.Id)
            </td>
            <td>
                <a asp-action="Resultat" asp-route-id="@item.Id">Résultats</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
